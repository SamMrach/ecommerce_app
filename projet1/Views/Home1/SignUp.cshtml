@model projet1.ModelBD.utilisateur
@{ ViewBag.Title = "SignUp";
                Layout = "~/Views/Shared/_Layout1.cshtml"; }

<html>
<head>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/script_signup.js" defer></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <style>
        .logo {
            height: 80px;
            display: block;
            margin: 0 auto 50px;
        }

        .container div {
            width: 400px;
            display: block;
            margin: 0 auto;
        }

        input[type="text"],
        input[type="password"],
        input[type="email"],
        textarea {
            display: block;
            width: 300px;
            height: 40px;
            padding: 20px;
            border-radius: 5px;
            background: #fff;
            border: none;
            outline: none;
            margin: 20px 0;
            text-transform: capitalize;
            color: #383838;
            font-size: 14px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.01);
            font-family: 'roboto', sans-serif;
        }

        select {
            display: block;
            width: 300px;
            height: 40px;
            padding: 0 20px;
            border-radius: 5px;
            background: #fff;
            text-transform: capitalize;
            border: none;
            outline: none;
            color: #383838;
            font-size: 14px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.01);
            font-family: 'roboto', sans-serif;
        }

        ::placeholder {
            color: #383838;
        }

        div .btns {
            width: 400px;
            display: flex;
            justify-content: space-around;
        }

        .submit-btn {
            width: 100%;
            height: 40px;
            text-align: center;
            line-height: 40px;
            background: #383838;
            color: #fff;
            border-radius: 2px;
            text-transform: capitalize;
            border: none;
            cursor: pointer;
            display: block;
            margin: 30px 0;
            transition: display 3s ease;
        }


        /* checkbox styles */

        .checkbox {
            -webkit-appearance: none;
            position: relative;
            width: 15px;
            height: 15px;
            border-radius: 2px;
            background: #fff;
            border: 1px solid #383838;
            cursor: pointer;
        }

            .checkbox:checked {
                background: #383838;
            }

            .checkbox::after {
                content: '';
                position: absolute;
                top: 60%;
                left: 50%;
                transform: translate(-50%, -50%);
                width: 80%;
                height: 100%;
                pointer-events: none;
                background-image: url(../img/check.png);
                background-size: contain;
                background-repeat: no-repeat;
                display: none;
            }

            .checkbox:checked::after {
                display: block;
            }

        label {
            text-transform: capitalize;
            display: inline-block;
            margin-bottom: 10px;
            font-size: 14px;
            color: #383838;
        }

            label a {
                color: #383838;
            }

        .link {
            color: #383838;
            text-transform: capitalize;
            text-align: center;
            display: block;
        }


        .field-validation-error {
            color: red;
        }
    </style>
</head>

<body>
    <div class="container">
        <img src="~/Content/resources/dark-logo.png" class="logo" alt="">
        <div>
            @using (Html.BeginForm("SignUp", "Home1", FormMethod.Post))
            {
            <div class="form-group">
                @Html.TextBoxFor(a => a.nom, new { @class = "form-control field-validation-error", placeholder = "nom" })
                @*
        <input type="text" autocomplete="off" id="name" placeholder="name" name="nom">
                *@
                @Html.ValidationMessageFor(a => a.nom)
            </div>
                <div class="form-group">
                    @Html.TextBoxFor(a => a.prenom, new { @class = "form-control field-validation-error", placeholder = "Prenom" })
                    @Html.ValidationMessageFor(a => a.prenom)
                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(a => a.email, new { @class = "form-control field-validation-error", placeholder = "Email" })
                                    @Html.ValidationMessageFor(a => a.email)
                                </div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(a => a.password, new { @class = "form-control field-validation-error", placeholder = "Password" })
                                                </div>
                                                                <div class="form-group">
                                                                    @Html.TextBoxFor(a => a.passwordComfirm, new { @class = "form-control", placeholder = "confirmer le mot de passe" })
                                                                    @Html.ValidationMessageFor(a => a.passwordComfirm)
                                                                </div>
                                                                                <div class="form-group">
                                                                                    @Html.TextBoxFor(a => a.tel, new { @class = "form-control field-validation-error", placeholder = "numero de telephone" })
                                                                                    @Html.ValidationMessageFor(a => a.tel)
                                                                                </div>
                                                                                                <input type="text" style="display:none" autocomplete="off" id="cin" placeholder="cin" name="CIN">
                                                                                                                <input type="text" style="display:none" autocomplete="off" id="SIRN" placeholder="SIRN" name="SIRN">
                                                                                                                                <input type="text" style="display:none" autocomplete="off" id="type_activite" placeholder="type_actvite" name="type_activite">
                                                                                                                                                <select id="select_type">

                                                                                                                                                    <option value="client">client</option>
                                                                                                                                                    <option value="particulier">prorietaire (particulier)</option>
                                                                                                                                                    <option value="societe">prorietaire (societe)</option>
                                                                                                                                                </select>
                                                                                                                                                                <div class="btns">
                                                                                                                                                                    <button id="client" class="submit-btn" name="type" value="client">créer client</button>
                                                                                                                                                                    <button id="particulier" class="submit-btn" name="type" value="particulier" style="display:none">créer particulier</button>
                                                                                                                                                                    <button id="societe" class="submit-btn" name="type" value="societe" style="display:none">créer societe</button>
                                                                                                                                                                </div>}
        </div>
        <a href="/Home1/login" class="link">already have an account? Log in here</a>
    </div>
</body>

</html>