<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body, html {
        }
        .goog-te-combo {
            width: auto;
        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'roboto', sans-serif;
        }

        .navbar {
            position: sticky;
            top: 0;
            left: 0;
            width: 100%;
            height: 80px;
            background: #f5f5f5;
            z-index: 9;
        }

        .nav {
            width: 100%;
            height: 80px;
            padding: 10px 10vw;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .brand-logo {
            height: 60px;
        }

        .brand-logo img {
            width: 100%;
            height: 100%;
        }

        .nav-items {
            display: flex;
            align-items: center;
        }

        .search {
            width: 500px;
            display: flex;
            align-items: center;
        }

        .search-box {
            width: 80%;
            height: 40px;
            padding: 10px;
            border-top-left-radius: 10px;
            border-bottom-left-radius: 10px;
            border: 1px solid #d1d1d1;
            text-transform: capitalize;
            background: none;
            color: #a9a9a9;
            outline: none;
            margin-right: 0;
        }

        .search-btn {
            width: 20%;
            height: 40px;
            padding: 10px 20px;
            border: none;
            outline: none;
            cursor: pointer;
            background: #383838;
            color: #fff;
            text-transform: capitalize;
            font-size: 15px;
            border-top-right-radius: 10px;
            border-bottom-right-radius: 10px;
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
            margin-left: 0;
        }

        .search-box::placeholder {
            color: #a9a9a9;
        }

        .nav-items a {
            margin-left: 20px;
            text-decoration: none;
        }

        .nav-items #login {
            margin-left: 20px;
            width: 80px;
            height: 40px;
            font-size: 15px;
            text-decoration: none;
            text-transform: capitalize;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            background: #333;
            text-align: center;
            line-height: 40px;
            color: white;
        }

        .nav-items a img {
            width: 30px;
        }

        .container_body-content {
            width: 100%;
        }

        footer {
            position: relative;
            width: 100%;
            padding: 40px 10vw;
            padding-bottom: 80px;
            background: #383838;
        }

        .footer-content {
            display: flex;
            width: 100%;
            justify-content: space-between;
        }

        .footer-content .logo {
            height: 160px;
        }

        .footer-ul-container {
            width: 45%;
            display: flex;
            justify-content: space-between;
        }

        .category {
            width: 200px;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-gap: 10px;
            list-style: none;
        }

        .category-title {
            grid-column: span 2;
            text-transform: capitalize;
            color: #fff;
            font-size: 20px;
            margin-bottom: 20px;
        }

        .category .footer-link {
            text-decoration: none;
            text-transform: capitalize;
            color: rgba(255, 255, 255, 0.75);
        }

        .footer-link:hover {
            color: #fff;
        }

        .footer-title, .info {
            color: rgba(255, 255, 255, 0.75);
            margin: 20px 0;
            text-transform: capitalize;
        }

        .footer-title {
            margin-top: 80px;
            color: #fff;
        }

        .footer-social-container {
            margin-top: 40px;
            display: flex;
            justify-content: space-between;
        }

        .social-link {
            color: #fff;
            margin-left: 20px;
            text-transform: capitalize;
        }

        .social-link:nth-child(1) {
            margin-left: 0;
        }

        .footer-credit {
            width: 100%;
            padding: 10px;
            position: absolute;
            left: 0;
            bottom: 0;
            text-align: center;
            color: #fff;
            background: rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="nav">
            <a href="/home1/index" class="brand-logo" alt=""><img src="~/Content/resources/dark-logo.png" /> </a>
            <div class="nav-items">
              
                <div class="search">

                    <input form="search" type="text" class="search-box" placeholder="search brand, product" name="title">
                    <button form="search" class="search-btn">search</button>
                    <form action="/home1/search" id="search"> </form>
                </div>
                @if (Request.IsAuthenticated)
                {
                    <a href="/Client1/Index"><img src="~/Content/resources/authenticated.png" alt=""></a>

                }
                else
                {

                    <a id="login" href="/Home1/Login">Login</a>

                }
                <a href="/client1/panier"><img src="~/Content/resources/cart.png" alt=""></a>


              

                <div id="google_translate_element" style=""></div>
            </div>
        </div>
    </nav>
    <div class="container_body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="footer-content">
                <img src="~/Content/resources/light-logo.png" class="logo" alt="">
                <div class="footer-ul-container">
                    <ul class="category">
                        <li class="category-title">Categories</li>
                        <li><a href="@Url.Action("SearchByCategory", "Home1",new { category="Men Apparel"})" name="category" class="footer-link">Men Apparel</a></li>
                        <li><a href="@Url.Action("SearchByCategory", "Home1",new { category="Women Apparel"})" name="category" class="footer-link">Women Apparel</a></li>
                        <li><a href="@Url.Action("SearchByCategory", "Home1",new { category="Men's Shoes"})" name="category" class="footer-link">Men Shoes</a></li>
                        <li><a href="@Url.Action("SearchByCategory", "Home1",new { category="Women's Shoes"})" name="category"  class="footer-link">Women Shoes</a></li>
                        <li><a href="@Url.Action("SearchByCategory", "Home1",new { category="Men's Accessories"})" name="category" class="footer-link">Men Accessories</a></li>
                        <li><a href="@Url.Action("SearchByCategory", "Home1",new { category="Women's Accessories"})" name="category"  class="footer-link">Women Accessories</a></li>
                    </ul>

                </div>
            </div>
            <p class="footer-title">about company</p>
            <p class="info">we are an ecommerce website with a vision of making our clients's lives better by offering a wide range of highly quality products at prices so low that as many people will be able to afford them  </p>
            <p class="info">support emails - help@clothing.com, customersupport@clothing.com</p>
            <p class="info">telephone - 180 00 00 001, 180 00 00 002</p>
            <div class="footer-social-container">
                <div>
                    <a href="#" class="social-link">terms & services</a>
                    <a href="#" class="social-link">privacy page</a>
                </div>
                <div>
                    <a href="#" class="social-link">instagram</a>
                    <a href="#" class="social-link">facebook</a>
                    <a href="#" class="social-link">twitter</a>
                </div>
            </div>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
<style>
    #google_translate_element span{
        display: none;
    }
    #google_translate_element {
        width: auto;
        margin-left: 100px;
    }
    .goog-logo-link {
        display: none !important;
    }

    .goog-te-gadget {
        color: transparent !important;
        font-size: 1px;
        line-height: 0;
    }
    iframe#\:1\.container {
        display: none;
    }
    .goog-te-banner-frame .skiptranslate{
        display: none;
        }
    select {
        display: block;
        width: 300px;
        height: 40px;
        padding: 0 20px;
        border-radius: 5px;
        background: #fff;
        text-transform: capitalize;
        border: none;
        outline: none;
        color: #383838;
        font-size: 14px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.01);
        font-family: 'roboto', 'sans-serif';
        }
        </style>


<script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    
<script type="text/javascript">

   








    function googleTranslateElementInit() {
        new google.translate.TranslateElement({ pageLanguage: 'en,fr', includedLanguages: ',en,fr,en' }, 'google_translate_element');

    }
   

    $(window).on('load', function () {
        $('.goog-te-gadget').html($('.goog-te-gadget').children());
        $("#google-translate").fadeIn('1000');


        function cleartimer() {
            setTimeout(function () {
                window.clearInterval(myVar);
            }, 500);
        }
        function myTimer() {
            if ($('.goog-te-combo option:first').length) {
                $('.goog-te-combo option:first').html('Translate');
                cleartimer();
            }
        }
        var myVar = setInterval(function () { myTimer() }, 0);

    });


</script>
<script>
    var translatedText = '';
    var interval = setInterval(function () {
        var el = document.getElementsByClassName('goog-te-menu-value')[0];
        if (el && el.innerText !== translatedText) {
            translatedText = el.innerText;
            console.log('changed');
        }
    }, 200);

</script>

</body>
</html>
