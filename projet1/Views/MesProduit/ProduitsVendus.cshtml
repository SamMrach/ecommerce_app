@model IEnumerable<projet1.ModelBD.commande_produit>
@{
    ViewBag.Title = "ProduitsVendus";
    Layout = "~/Views/Shared/_PropLayout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Produits Vendus</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("index", "HomeProp")">Tableau de board</a></li>
                    <li class="breadcrumb-item active">Produits Vendus</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-secondary .formAjoutPrdt1">

            <div class="card-body table-responsive p-0">
                <table class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Ajouté le</th>
                            <th>Prix</th>
                            <th>Quantité vendu</th>
                            <th>Client</th>
                            <th>Supprimer</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@Url.Content(item.produit.ImagePath)" alt="Product 1" class="img-circle img-size-32 mr-2">
                                        @item.produit.title
                                    </td>
                                    <td>@item.produit.dateAjout.Day/@item.produit.dateAjout.Month/@item.produit.dateAjout.Year </td>
                                    <td>@item.produit.prix</td>
                                    
                                    <td>@item.quantity</td>
                                    <td>@item.commande.client.prenom @item.commande.client.nom</td>
                                    <td align="center">
                                        <a href="@Url.Action("DeleteProduit", "MesProduit",new { id = @item.produit.ref_Id ,  onclick = "return confirm(' Voulez-Vous Supprimer ce produit ? ')" })" class="text-muted">
                                            <i class="fas fa-trash"></i>
                                        </a>

                                    </td>
                                    @*<td>
                                            <small class="text-success mr-1">
                                                <i class="fas fa-arrow-up"></i>
                                                12%
                                            </small>
                                            12,000 Sold
                                        </td>*@
                                    @*<td>
                                            <a href="#" class="text-muted">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                        </td>*@
                                </tr>
                            }
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

