@model projet1.ModelBD.categorie
@{
    ViewBag.Title = "Save";
    Layout = null;
}


@using (Html.BeginForm("Save", "Categorie", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.cat_Id > 0)
    {
        @Html.HiddenFor(a => a.cat_Id)
    }
    <div style="align-content:center">
        
        <div class="form-group">
            <label>libellé catégorie</label>
            @Html.TextBoxFor(a => a.name, new { @class = "form-control" ,required="required"})
          
        </div>
        <div class="form-group">
            <label>Description de catégorie</label>
            @Html.TextBoxFor(a => a.description, new { @class = "form-control" , required = "required" })
     
        </div>
        


        <div style="text-align:center">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
}


